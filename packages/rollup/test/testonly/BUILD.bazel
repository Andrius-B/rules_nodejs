load("//:index.bzl", "generated_file_test", "js_library", "nodejs_binary", "npm_package_bin")
load("//packages/rollup:index.bzl", "rollup_bundle")

js_library(
    name = "lib",
    srcs = ["lib.js"],
)

js_library(
    name = "main",
    testonly = True,
    srcs = ["main.js"],
    deps = [":lib"],
)

rollup_bundle(
    name = "bundle",
    testonly = True,
    entry_point = "main.js",
    deps = [
        ":main",
    ],
)

nodejs_binary(
    name = "bin",
    testonly = True,
    data = [
        ":bundle",
    ],
    entry_point = "bundle.js",
)

npm_package_bin(
    name = "runner",
    testonly = True,
    stdout = "out.txt",
    tool = ":bin",
)

generated_file_test(
    name = "test",
    src = "out.golden.txt",
    generated = "out.txt",
)
